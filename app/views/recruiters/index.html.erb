<%- model_class = Recruiter.new.class -%>
<div class="page-header">
  <h1><%= model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
    </tr>
  </thead>
  <tbody>
    <% @recruiters.each do |recruiter| %>
      <tr>
        <td><%= link_to recruiter.name, recruiter_path(recruiter) %></td>
        <td><%= recruiter.email %></td>
        <td><%= recruiter.phone %></td>
        <td>
          <%= link_to 'Edit', edit_recruiter_path(recruiter), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_recruiter_path, :class => 'btn btn-primary' %>
