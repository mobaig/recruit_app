<%= simple_form_for @recruiter, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :phone %>
  <%= f.input :description, :input_html => {:rows => 6}  %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to 'Cancel', recruiters_path, :class => 'btn' %>
  </div>
<% end %>
