<%- model_class = @recruiter.class -%>
<div class="page-header">
  <h1><%= @recruiter.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @recruiter.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= display_attribute(@recruiter.email) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= display_attribute(@recruiter.phone) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= simple_format(display_attribute(@recruiter.description)) %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Back', recruiters_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_recruiter_path(@recruiter), :class => 'btn' %>
  <%= link_to 'Destroy',
              recruiter_path(@recruiter),
              :method => 'delete',
              :confirm => 'Are you sure?',
              :class => 'btn btn-danger' %>
</div>
