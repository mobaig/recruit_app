<%- model_class = @candidate.class -%>
<div class="page-header">
  <h1><%= @candidate.name %></h1>
</div>

<div class="row candidate_profile">
  <div class="span4">
    <div class="cv_management">
      <span class="cv_icon"><%= cv_link_helper(@candidate) %></span>
    </div>

    <dl class="dl-horizontal">
      <dt><%= model_class.human_attribute_name(:email) %></dt>
      <dd><%= dl_attribute_display_helper(@candidate.email)%></dd>
      <dt><%= model_class.human_attribute_name(:github) %></dt>
      <dd><%= dl_attribute_display_helper(@candidate.github) %></dd>
      <dt><%= model_class.human_attribute_name(:linkedin) %></dt>
      <dd><%= dl_attribute_display_helper(@candidate.linkedin) %></dd>
      <dt><%= model_class.human_attribute_name(:website) %></dt>
      <dd><%= dl_attribute_display_helper(@candidate.website) %></dd>
      <dt><%= model_class.human_attribute_name(:state) %></dt>
      <dd><%= state_label_helper(@candidate.state) %></dd>
    </dl>

    <div class="profile_navigation">
      <%= link_to 'Back', candidates_path, :class => 'btn' %>
      <%= link_to 'Edit', edit_candidate_path(@candidate), :class => 'btn' %>
    </div>
  </div>

  <div class="span8 notes_container">
    <h3>Notes</h3>
    <%= form_for [@candidate, @note] do |n|%>
      <% if @note.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@note.errors.count, "error") %> prohibited this candidate from being saved:</h2>

          <ul>
          <% @note.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="control-group">
        <%= n.label :author, :class => 'control-label' %>
        <div class="controls">
          <%= n.text_field :author, :class => 'text_field' %>
        </div>
      </div>

      <div class="control-group">
        <%= n.label :body, :class => 'control-label' %>
        <div class="controls">
          <%= n.text_area :body, :class => 'input-xlarge', :rows => 3 %>
        </div>
      </div>

      <%= n.submit 'Post', :class => 'btn btn-primary' %>
    <% end %>

    <%= render @all_candidate_notes if @all_candidate_notes %>
  </div>
</div>